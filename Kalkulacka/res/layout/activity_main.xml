<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kalkulacka.MainActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/prvyEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:ems="4"
        android:inputType="numberDecimal"
        android:text="@string/prvy_edit_text" />

    <EditText
        android:id="@+id/druhyEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/prvyEditText"
        android:layout_alignBottom="@+id/prvyEditText"
        android:layout_marginLeft="135dp"
        android:layout_toRightOf="@+id/prvyEditText"
        android:ems="4"
        android:inputType="numberDecimal"
        android:text="@string/druhy_edit_text" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/vysledokEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/druhyEditText"
        android:layout_alignBottom="@+id/druhyEditText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="@string/vysledok_edit_text" />

</RelativeLayout>
